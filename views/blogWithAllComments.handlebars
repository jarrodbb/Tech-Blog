<h1>

  <a href="/dashboard">Dashboard</a>
</h1>

<h1>{{title}}</h1>

<p>{{description}}</p>

{{#if comments.length}}

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 delete-now">
    {{#each comments as |comment|}}
      <div class="bg-white rounded-lg p-4 shadow-md">
        <h4 class="text-xl font-semibold mb-2">
          {{comment.comment_description}}</h4>
        <h4 class="text-xl font-semibold mb-2">
          {{comment.user_username}}</h4>
        <h4 class="text-xl font-semibold mb-2">
          {{comment.date}}</h4>

      </div>
    {{/each}}
  </div>
{{else}}
  <p class="text-lg">No Comments.</p>
{{/if}}