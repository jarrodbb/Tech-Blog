<h1>

  <a href="/">The Tech Blog</a>
</h1>

{{#each blogs as |blog|}}
  <div class="row mb-4">
    <div class="col-md-5">
      <h2>

        <a href="/comment-add/{{blog_id}}">{{title}}</a>
      </h2>
      <p>

        <p>Created by {{user.username}} on {{date}}</p>

      </p>

    </div>
    <div class="col-md-7">
      <p>
        {{description}}
      </p>
    </div>
  </div>
{{/each}}